{
  "name": "dcs-accounting-app",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run next-dev\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "next-dev": "next dev",
    "electron-dev": "NODE_ENV=development electron .",
    "build": "npm run build:next && npm run prisma:generate",
    "build:next": "NODE_ENV=production next build",
    "build:electron": "electron-builder",
    "build:prod": "npm run build && npm run build:electron",
    "dist": "npm run build:prod",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "test": "vitest",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "format": "biome format ./src",
    "format:fix": "biome format --write ./src",
    "check": "biome check ./src",
    "check:fix": "biome check --write ./src",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/naro9507/dcs-accounting-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/naro9507/dcs-accounting-app/issues"
  },
  "homepage": "https://github.com/naro9507/dcs-accounting-app#readme",
  "description": "",
  "dependencies": {
    "@journeyapps/sqlcipher": "^5.3.1",
    "@prisma/client": "^6.10.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/uuid": "^10.0.0",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^16.5.0",
    "electron-updater": "^6.6.2",
    "next": "^15.3.3",
    "next-intl": "^4.1.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.10.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sqlite3": "^5.1.7",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vitest": "^3.2.3",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.example.dcs-accounting-app",
    "productName": "DCS会計アプリ",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/@prisma/client/**/*",
      "node_modules/.prisma/**/*",
      "prisma/schema.prisma",
      ".env.production",
      "!node_modules/.cache",
      "!**/*.map",
      "!src",
      "!electron.ts"
    ],
    "extraResources": [
      {
        "from": "prisma/schema.prisma",
        "to": "prisma/schema.prisma"
      }
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "naro9507",
      "repo": "dcs-accounting-app"
    }
  }
}
